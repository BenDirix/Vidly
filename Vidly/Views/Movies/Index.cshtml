@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movies";
}

<h2>Movies</h2>
@Html.ActionLink("New Movie", "New", "Movies", new { @class = "btn btn-primary btn-sm"})
@if(Model.Count == 0)
{
    <p style="margin-top: 20px;">We don't have any movies yet</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Movie</th>
                <th>Genre</th>
            </tr>
        </thead>
        <tbody>

        </tbody>
        @foreach(var movie in Model)
        {
            <tr>
                <td>@Html.ActionLink(movie.Name, "Edit", new { id = movie.Id }, null)</td>
                <td>@movie.Genre.Name</td>
            </tr>
        }
    </table>
}

