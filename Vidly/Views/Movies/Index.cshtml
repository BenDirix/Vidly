@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Movies";
}

<h2>Movies</h2>
@if(Model.Count == 0)
{
    <p>We don't have any movies yet</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Movie</th>
            </tr>
        </thead>
        <tbody>

        </tbody>
        @foreach(var movie in Model)
        {
            <tr>
                <td>@movie.Name</td>
            </tr>
        }
    </table>
}

