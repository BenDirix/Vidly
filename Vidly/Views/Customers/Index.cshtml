@model List<Vidly.Models.Customer>
@{
    ViewBag.Title = "Index";
}

<h2>Customers</h2>
@Html.ActionLink("New Customer", "New", "Customers", new { @class = "btn btn-primary btn-sm"})
@if(Model.Count != 0)
{
    <table id="customers" class="table table-striped">
        <thead>
            <tr>
                <th>Customer</th>
                <th>Membership Type</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var customer in Model)
            {
                <tr>
                    <td>@Html.ActionLink(@customer.Name, "Edit", new { id = customer.Id })</td>
                    <td>@customer.MembershipType.Name</td>
                    <td>
                        <button customer-id="@customer.Id" class="btn-link js-delete"><span class="glyphicon glyphicon-remove"></span></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>We don't have any customers yet.</p>
}

@section scripts{
    <script>
        $(document).ready(() => {            
            $("#customers .js-delete").on("click", function() {
                let button = $(this);
                bootbox.confirm("Are you sure you want to delete this customer?",  (result) => {
                    if (result) {
                        $.ajax({
                            url: "/api/customers/" + button.attr("customer-id"),
                            method: "DELETE",
                            success:  () => {
                                button.parents("tr").remove();
                            }
                        })
                    }
                })
            })
        })
    </script>
}

